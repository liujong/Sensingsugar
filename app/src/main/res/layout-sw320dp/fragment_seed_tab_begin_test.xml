<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient_bk"
    tools:context="me.sensingself.sensingsugar.Activites.Fragments.TestTab.SeedBeginTestFragment"
    android:id="@+id/seedTabBeginTest">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/begin_test_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorDarkBrown"
            android:textSize="@dimen/navi_title_font_size" />

        <ImageView
            android:id="@+id/beginTestbackImageView"
            android:layout_width="@dimen/login_mobile_num_edittext_height"
            android:layout_height="@dimen/login_mobile_num_edittext_height"
            android:layout_marginStart="@dimen/login_mobile_num_edittext_margin_start"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/back_img" />
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/noteBeginTest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/login_mobile_num_edittext_margin_start"
            android:layout_marginStart="@dimen/login_mobile_num_edittext_margin_start"
            android:layout_marginTop="@dimen/patient_note_textview_margin_top"
            android:text="@string/note_begin_test"
            android:textAlignment="center"
            android:textColor="@color/colorBrown"
            android:textSize="@dimen/login_mobile_num_title_textview_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bloodtype_constraint_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/fastingCheckBox"
                android:layout_width="@dimen/agree_imageview_width"
                android:layout_height="@dimen/agree_imageview_height"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/todo"
                app:layout_constraintBottom_toBottomOf="@+id/fastingBloodSugarEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fastingBloodSugarEdit"
                app:srcCompat="@drawable/check_agree" />

            <TextView
                android:id="@+id/fastingBloodSugarEdit"
                android:layout_width="0dp"
                android:layout_height="@dimen/login_mobile_num_edittext_height"
                android:layout_marginEnd="@dimen/login_mobile_num_edittext_margin_start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/login_mobile_num_edittext_margin_start"
                android:background="@drawable/radius_controller_textview"
                android:hint="@string/fasting_blood_sugar"
                android:paddingEnd="@dimen/firstname_editText_padding_end"
                android:paddingStart="@dimen/firstname_editText_padding_start"
                android:textColor="@color/colorDarkBrown"
                android:textColorLink="@color/colorDarkBrown"
                android:textSize="@dimen/editView_default_font_size"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fastingCheckBox"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/postprandialCheckBox"
                android:layout_width="@dimen/agree_imageview_width"
                android:layout_height="@dimen/agree_imageview_height"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/todo"
                app:layout_constraintBottom_toBottomOf="@+id/postprandialBloodSugarEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/postprandialBloodSugarEdit"
                app:srcCompat="@drawable/uncheck_agree" />

            <TextView
                android:id="@+id/postprandialBloodSugarEdit"
                android:layout_width="0dp"
                android:layout_height="@dimen/login_mobile_num_edittext_height"
                android:layout_marginEnd="@dimen/login_mobile_num_edittext_margin_start"
                android:layout_marginStart="10dp"
                android:background="@drawable/radius_controller_textview"
                android:hint="@string/postprandial_blood_sugar"
                android:paddingEnd="@dimen/firstname_editText_padding_end"
                android:paddingStart="@dimen/firstname_editText_padding_start"
                android:textColor="@color/colorDarkBrown"
                android:textColorLink="@color/colorDarkBrown"
                android:textSize="@dimen/editView_default_font_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/postprandialCheckBox"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/randomBloodSugarCheckBox"
                android:layout_width="@dimen/agree_imageview_width"
                android:layout_height="@dimen/agree_imageview_height"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/todo"
                app:layout_constraintBottom_toBottomOf="@+id/randomBloodSugarEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/randomBloodSugarEdit"
                app:srcCompat="@drawable/uncheck_agree" />

            <TextView
                android:id="@+id/randomBloodSugarEdit"
                android:layout_width="0dp"
                android:layout_height="@dimen/login_mobile_num_edittext_height"
                android:layout_marginBottom="@dimen/login_mobile_num_edittext_margin_start"
                android:layout_marginEnd="@dimen/login_mobile_num_edittext_margin_start"
                android:layout_marginStart="10dp"
                android:background="@drawable/radius_controller_textview"
                android:gravity="center_vertical"
                android:hint="@string/random_blood_sugar"
                android:paddingEnd="@dimen/firstname_editText_padding_end"
                android:paddingStart="@dimen/firstname_editText_padding_start"
                android:textColor="@color/colorDarkBrown"
                android:textColorLink="@color/colorDarkBrown"
                android:textSize="@dimen/editView_default_font_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/randomBloodSugarCheckBox" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/testGuidLink"
            android:layout_width="0dp"
            android:layout_height="@dimen/register_link_textview_height"
            android:layout_marginBottom="@dimen/verifynote_textview_margin_bottom"
            android:text="@string/test_guid"
            android:textAlignment="center"
            android:textSize="@dimen/register_link_textview_font_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
