<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorLightGray"/>
            <stroke android:color="@color/colorLightGray" android:width="1dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="70dp" />
            <gradient
                android:angle="90"
                android:startColor="@color/colorPrimaryButton"
                android:endColor="#ffe1cbf5"
                android:type="linear" />
        </shape>
    </item>
</selector>